<%= image_tag "show.jpg", id: 'pig'%>
<div class="bakery_card">
  <h1><%= @bakery.name %></h1>
  <p><%= @bakery.address %> <%= @bakery.zip %> <%= @bakery.city %></p>
</div>

<% @bakery.products.each do |product| %>
  <div class="card-product">
    <%= image_tag "bakpic.jpg",class: "pic" %>
    <div class="card-product-infos">
      <div class="add-product">
        <%= link_to '+', my_orders_path %>
      </div>
          <h2><%= product.name %></h2>
          <span class="product-detail"><p><%= product.details %></p></span>
          <p class="product-price"><%= product.price %> CHF</p>
    </div>
  </div>
<% end %>
