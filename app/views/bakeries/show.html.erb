<img src="<%= @bakeries.street %>" alt="" id="pig">
<%= link_to bakeries_path do %>
  <ion-icon name="ios-arrow-dropleft" class="arrow-back"></ion-icon>
<% end %>
<div class="bakery_card">
  <h1><%= @bakeries.name %></h1>
  <p><%= @bakeries.address %>
  <%= @bakeries.discription%></p>
</div>

<% @bakeries.products.each do |product| %>
  <div class="card-product">
  <%# Taille provisoire, Ã  change dans les styles (style="") %>
    <img src="<%= product.img %>" class: "pic" style="height:100px; width:100px;">
    <div class="card-product-infos">
      <div class="add-product">
        <%= link_to '+', add_to_basket_path(product_id: product.id), method: :post %>
      </div>
          <h2><%= product.name %></h2>
          <span class="product-detail"><p><%= product.details %></p></span>
          <p class="product-price"><%= product.price %> CHF</p>
    </div>
  </div>
<% end %>
