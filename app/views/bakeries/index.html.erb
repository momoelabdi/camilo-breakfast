<%= render 'shared/navbar' %>
<section>
  <div class="cards-bakery">
    <div style="width: 100%; height: 300px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

    <ul>
      <% @bakeries.each do |bakery| %>
        <a href="<%= bakery_path(bakery) %>">

          <div class="card-bakery">
            <div class="img-bakery">
              <img src="<%= bakery.street %>" alt="">
            </div>
            <span class="name"><li><%= bakery.name %></li></span>
            <span class="street"><li>Address :<%= bakery.address %> <%= bakery.zip %> <%= bakery.city %></li></span>
          </div>
        </a>
      <% end %>
    </ul>
  </div>
</section>
