<%= render 'shared/navbar' %>
<section>
  <div id="map2"></div>

  <div class="cards-bakery">
    <ul>
      <% @bakeries.each do |bakery| %>
        <a href="<%= bakery_path(bakery) %>">

          <div class="card-bakery" style="text-align: center">
            <div class="img-bakery">
              <img src="<%= bakery.street %>" alt="">
            </div>
            <div class="bakery_address">
              <h2 style="align-items:center;"><li><%= bakery.name %></li></h2>
              <p><li><%= bakery.address %></li></p>
            </div>
          </div>
        </a>
      <% end %>
    </ul>
  </div>
</section>
