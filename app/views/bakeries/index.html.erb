<%= render 'shared/navbar' %>
<section>
  <div class="cards-bakery">
    <%# <div class="map">
    </div> %>
    <div style="width: 100%; height: 300px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

    <ul>
      <% @bakeries.each do |bakery| %>
        <a href="<%= bakery_path(bakery) %>">

          <div class="card-bakery">
            <div class="button-add"><p>10-15 min</p></div>
            <div class="img-bakery">
              <%# <img src="https://images.unsplash.com/photo-1599940778173-e276d4acb2bb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1455&q=80" alt=""> %>
            </div>
            <span class="name"><li><%= bakery.name %></li></span>
            <span class="street"><li><%= bakery.address %> <%= bakery.zip %> <%= bakery.city %></li></span>
          </div>
        </a>
      <% end %>
    </ul>
  </div>
</section>
