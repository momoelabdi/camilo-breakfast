<h1>My order</h1>

  <% current_user.current_order.products.each do |product| %>
<div class="card-product">
   <%= image_tag "bakpic.jpg",class: "pic" %>
  <div class="card-product-infos">
    <h2><%= product.bakery.name %></h2>
    <p> <%= product.details%>Fruits Jus, <br>
    Sandwiches in option with Sheese or Omelet. And an Original coffee to Start your day.</p>
    <p>  <strong><%= product.price %> CHF</strong></p>
  </div>
    <%= link_to '+', add_to_basket_path(product_id: product.id), method: :post %>
</div>
<% end %>
